<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.FormCuenta">


    <TextView
        android:id="@+id/txtCuenta"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Cuenta"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/inputNombreCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ej: CuentaAhorro"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtNombreCuenta"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="@+id/txtNombreCuenta"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreCuenta" />

    <TextView
        android:id="@+id/txtCaducado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cuenta Caducada:"
        app:layout_constraintEnd_toEndOf="@+id/inputNombreCuenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputNombreCuenta"
        app:layout_constraintTop_toBottomOf="@+id/inputNombreCuenta" />

    <EditText
        android:id="@+id/inputCaducado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ej: True/False"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtCaducado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtCaducado"
        app:layout_constraintTop_toBottomOf="@+id/txtCaducado" />

    <TextView
        android:id="@+id/txtNombreCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre Cuenta:"
        app:layout_constraintEnd_toEndOf="@+id/txtCuenta"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="@+id/txtCuenta"
        app:layout_constraintTop_toBottomOf="@+id/txtCuenta" />

    <TextView
        android:id="@+id/txtFechaCreacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Fecha CreaciÃ³n:"
        app:layout_constraintEnd_toEndOf="@+id/inputCaducado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputCaducado"
        app:layout_constraintTop_toBottomOf="@+id/inputCaducado" />

    <EditText
        android:id="@+id/inputCreacionCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ej: 2022-05-24"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/txtFechaCreacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtFechaCreacion"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaCreacion" />

    <Button
        android:id="@+id/btnAggCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:backgroundTint="#a2cb8b"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnActualizarCuenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCantidad"
        app:layout_constraintVertical_bias="0.256" />

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cantidad Total:"
        app:layout_constraintEnd_toEndOf="@+id/inputCreacionCuenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputCreacionCuenta"
        app:layout_constraintTop_toBottomOf="@+id/inputCreacionCuenta" />

    <EditText
        android:id="@+id/inputCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ej: 16000.50"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/textCantidad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textCantidad"
        app:layout_constraintTop_toBottomOf="@+id/textCantidad" />

    <Button
        android:id="@+id/btnActualizarCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#ec7"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCantidad"
        app:layout_constraintVertical_bias="0.256" />

</androidx.constraintlayout.widget.ConstraintLayout>